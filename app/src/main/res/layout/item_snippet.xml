<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/base_margin_eight"
    android:layout_marginBottom="@dimen/base_margin_eight"
    android:layout_marginLeft="@dimen/base_margin_eight"
    android:layout_marginRight="@dimen/base_margin_eight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:id="@+id/cvItem">

        <RelativeLayout
            android:orientation="horizontal"
            android:padding="@dimen/base_margin_eight"
            android:background="@color/theme400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llEDTs"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/base_margin_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    float:fletPaddingBottom="10dp">
                    <EditText
                        android:id="@+id/edtBPM"
                        android:layout_width="70dp"
                        android:maxLength="3"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="@string/bpm"
                        style="@style/App_EditTextStyle"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:id="@+id/fedtBars"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    float:fletPaddingBottom="10dp">
                    <EditText
                        android:id="@+id/edtBarsCount"
                        android:layout_width="70dp"
                        android:maxLength="8"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="@string/bars_count"
                        style="@style/App_EditTextStyle"/>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/llEDTs"
                android:id="@+id/llTimeSignature"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinnerBeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tvSlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/dash"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <Spinner
                    android:id="@+id/spinnerNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibTrash"
                android:src="@drawable/ic_action_discard"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>